<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimaryDark"
    tools:context=".presentation.widget.ToolbarFilter">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_start"
        android:layout_width="@dimen/toolkit_dimen48"
        android:layout_height="@dimen/toolkit_dimen48"
        android:layout_marginStart="@dimen/toolkit_dimen8"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button_end"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolkit_dimen48"
        android:layout_marginEnd="@dimen/toolkit_dimen8"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textAppearance="@style/Text.Medium.18sp"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Limpar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.Bold.18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>