<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_latest_news"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolkit_dimen146"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox_latest_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolkit_dimen8"
        android:background="@drawable/checkbox_favorite"
        android:button="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_latest_news" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_latest_news_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolkit_dimen8"
        android:textAppearance="@style/Text.Italic.14sp"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_latest_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkbox_latest_news"
        tools:text="16 horas atrÃ¡s" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_latest_news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolkit_dimen10"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/Text.Bold.18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_latest_news"
        tools:text="@tools:sample/lorem/random" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_latest_news_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolkit_dimen8"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="@style/Text.Regular.14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_latest_news_title"
        tools:text="@tools:sample/lorem/random" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/toolkit_dimen16"
        android:layout_marginBottom="@dimen/toolkit_dimen16"
        android:background="@color/gray_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_latest_news_description" />

</androidx.constraintlayout.widget.ConstraintLayout>